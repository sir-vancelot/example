<resources>
    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_home_white_24dp</item>

        <item name="android:buttonStyle">@android:style/Widget.Holo.Button</item>

        <item name="actionBarThemeOverlay">@style/ActionBarThemeOverlayDark</item>
        <item name="actionBarPopupThemeOverlay">@style/ActionBarPopupThemeOverlayDark</item>
        <item name="actionBarOverflowIcon">@drawable/overflow_white</item>

        <item name="android:alertDialogTheme">@style/DialogStyleDark</item>
        <item name="baseDialog">@style/DialogStyleDark</item>
        <item name="wideDialog">@style/DialogWideStyleDark</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_home_white_24dp</item>

        <item name="android:buttonStyle">@android:style/Widget.Holo.Button</item>

        <item name="actionBarThemeOverlay">@style/ActionBarThemeOverlayLight</item>
        <item name="actionBarPopupThemeOverlay">@style/ActionBarPopupThemeOverlayLight</item>
        <item name="actionBarOverflowIcon">@drawable/overflow_black</item>

        <item name="android:alertDialogTheme">@style/DialogStyleLight</item>
        <item name="baseDialog">@style/DialogStyleLight</item>
        <item name="wideDialog">@style/DialogWideStyleLight</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarOverFlow">
        <item name="android:src">?attr/actionBarOverflowIcon</item>
        <item name="android:minWidth">60dp</item>
    </style>
    <style name="ActionBarPopupThemeOverlayDark" parent="">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ActionBarThemeOverlayDark" parent="">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ActionBarPopupThemeOverlayLight" parent="">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ActionBarThemeOverlayLight" parent="">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogStyleDark" parent="android:Theme.Holo.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>
    <style name="DialogStyleLight" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>
    <style name="DialogWideStyleDark" parent="DialogStyleDark">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>
    <style name="DialogWideStyleLight" parent="DialogStyleLight">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

</resources>
